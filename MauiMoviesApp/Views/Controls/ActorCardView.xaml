<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="MauiMoviesApp.Views.Controls.ActorCardView">


    <Grid Padding="10"
          BindingContext="{x:Reference this}">
        <Frame HeightRequest="300"
               WidthRequest="150"
               Padding="0"
               BackgroundColor="Black"
               BorderColor="Black"
               CornerRadius="10">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer CommandParameter="{Binding ActorId}"
                                      Command="{Binding GoToDetailsCommand}"
                                                          />
            </Frame.GestureRecognizers>
            <Grid RowDefinitions="180, *">
                <Image Source="{Binding Profile_Path}"
                       Aspect="AspectFill"
                       HeightRequest="180"
                       WidthRequest="150" />
                <StackLayout Padding="5"
                             Grid.Row="1"
                             VerticalOptions="Center">
                    <Label  Text="{Binding Name}" TextColor="White"/>
                    <Label  Text="{Binding Character}" TextColor="White"/>
                </StackLayout>
            </Grid>
        </Frame>


    </Grid>
</ContentView>
